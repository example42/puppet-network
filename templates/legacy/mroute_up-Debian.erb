#!/bin/bash
#
###
### File managed by Puppet
###
if [ "$IFACE" = "<%= @interface -%>" ] || [ "$IFACE" = "--all" ]; then
<% @routes.each do |net,gw| -%>
  if ! ip route show | grep -qF "<%= net %> "
  then
    ip route add <% if @table -%>table <%= @table %> <% end -%><%= net %><%
      if gw.kind_of?(Array)
        gw.each do | g | %> nexthop via <%= g %><% end %>
      <%- elsif /^\d/.match(gw) %> via <%= gw %>
      <%- else %> dev <%= gw %>
      <%- end -%>
  fi
<% end -%>
fi
