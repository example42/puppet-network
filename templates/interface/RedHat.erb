<% end -%>
DEVICE="<%= @interface %>"
<% if ! @ovsbootproto -%>
BOOTPROTO="<%= @manage_bootproto %>"
<% end -%>
ONBOOT="<%= @manage_onboot %>"
TYPE="<%= @type %>"
USERCTL="<%= @userctl %>"
PEERDNS="<%= @manage_peerdns %>"
